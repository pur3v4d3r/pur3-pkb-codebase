/* ═══════════════════════════════════════════════════════════
   SECTION 3: ACTIVE LINE HIGHLIGHTING (CRITICAL FIX)
   Dependencies: Variables
   Description: Editor active line with red glow
   ═══════════════════════════════════════════════════════════ */

/* Active line in regular text (subtle red highlight) */
.cm-activeLine {
  background: rgba(229, 0, 0, 0.08);
}

/* Active line gutter (line numbers - crimson & bold) */
.cm-activeLineGutter {
  background: rgba(229, 0, 0, 0.15);
  color: var(--theme-red-vivid);
  font-weight: 700;
}

/* Code blocks - Keep active line transparent (don't highlight inside code) */
.HyperMD-codeblock.cm-activeLine,
.cm-line.HyperMD-codeblock.cm-activeLine {
  background: transparent;
}

/* ═══════════════════════════════════════════════════════════
   SECTION 3: CODE BLOCKS
   Dependencies: Variables
   Description: Preview & live preview mode code block styling
   ═══════════════════════════════════════════════════════════ */

/* Preview/Reading Mode - Complete code blocks */
.markdown-preview-view pre {
  background: linear-gradient(135deg, var(--theme-black-base) 0%, var(--theme-black-deep) 100%);
  border-radius: var(--radius-lg);
  border: none;
  box-shadow:
