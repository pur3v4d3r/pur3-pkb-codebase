    0 1px 3px rgba(var(--callout-color), 0.2);
  padding: 0;
  margin: var(--space-lg) 0;
  transition: transform var(--transition-normal), box-shadow var(--transition-normal);
}

/* Remove default glow */
.callout::before {
  display: none;
}

/* Top accent gradient */
.callout::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(90deg,
    rgb(var(--callout-color)) 0%,
    rgba(var(--callout-color), 0.5) 100%);
  border-radius: var(--radius-xl) var(--radius-xl) 0 0;
  pointer-events: none;
}

/* Card title with colored background */
.callout-title {
  background: rgba(var(--callout-color), 0.12);
