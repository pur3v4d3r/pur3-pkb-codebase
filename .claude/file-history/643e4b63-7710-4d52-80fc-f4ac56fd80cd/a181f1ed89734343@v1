  transition: all var(--transition-normal);
}

/* Elevated hover - card lifts */
.callout:hover {
  transform: translateY(-8px);
  box-shadow:
    0 12px 24px rgba(0, 0, 0, 0.20),
    0 16px 40px rgba(0, 0, 0, 0.15),
    0 0 0 1px rgba(var(--callout-color), 0.3),
    0 2px 8px rgba(var(--callout-color), 0.4);
  border-left-width: 5px;
}

.callout:hover .callout-title {
  background: rgba(var(--callout-color), 0.18);
}

.callout:hover .callout-icon {
  background: rgba(var(--callout-color), 0.25);
  transform: scale(1.1);
}

/* Nested callouts less elevated */
.callout .callout {
  margin: var(--space-md) 0;
  box-shadow:
    0 2px 8px rgba(0, 0, 0, 0.12),
    0 4px 16px rgba(0, 0, 0, 0.08);
}

.callout .callout:hover {
  transform: translateY(-4px);
}

/* Focus for accessibility */
.callout:focus-within {
  outline: 2px solid rgba(var(--callout-color), 0.5);
  outline-offset: 4px;
}

